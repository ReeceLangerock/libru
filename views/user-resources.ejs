<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./favicon.ico" type="image/x-icon">
    <title>Libru</title>
    <link rel="stylesheet" type="text/css" href="./style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <link href="../bower_components/bootstrap-star-rating/css/star-rating.min.css" media="all" rel="stylesheet" type="text/css" />
    <script src="../bower_components/bootstrap-star-rating/js/star-rating.min.js" type="text/javascript"></script>


</head>

<body>
    <!--import navbar -->
    <% if (isUserAuthenticated) { %>
    <%- include ./partials/authenticated-navigation.ejs %>
    <%  } else { %>
    <%- include ./partials/navigation.ejs %>
    <%  } %>

    <% var allResources = completedResources.concat(toDoResources,inProgressResources) %>

    <div class="container">
      <div class = "row">
        <div class = "col-md-2">
        <h3>Resources</h3>
        <p>All (<%=allResources.length%>)</p>
        <p>Completed (<%=completedResources.length%>)</p>
        <p>In Progress (<%=toDoResources.length%>)</p>
        <p>Want To Do (<%=inProgressResources.length%>)</p>
        </div>
<div class = "col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Difficulty</th>
            <th>Avg. Rating</th>
            <th>Your Rating</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i =0; i < allResources.length; i++) { %>
            <% var sum = 0; %>
            <% for(let j =0; j <allResources[i].resourceRatings.length; j++) { %>
            <%  sum += allResources[i].resourceRatings[j].rating; %>
            <% } %>
            <% var avg = sum / allResources[i].resourceRatings.length; %>
            <% avg = isNaN(avg) ? "No Ratings" : avg %>
          <tr>
            <td class = "col-md-1"><img class="img-responsive" src = "<%=allResources[i].resourceImageURL %>"</td>
            <td class = "col-md-1"><a href ="../resource/<%=allResources[i]['_id'] %>"><%=allResources[i].title %></a></td>
            <td class = "col-md-1"><%=allResources[i].resourceCategory %></td>
            <td class = "col-md-1"><%=allResources[i].resourceSubCategory %></td>
            <td class = "col-md-1"><%=allResources[i].resourceDifficulty %></td>
            <td class = "col-md-1"><%=avg %></td>
            <td class = "col-md-1">
              <form method="POST" action="/resource/rate">
              <div class="form-group">
                <input type = "hidden" name = "resourceID" value = "<%=allResources[i]['_id']%>">
                <input onchange="this.form.submit()" id="input-id" name="resourceRating" type="number" class="rating" value = "<%=allResources[i].rating%>" min=0 max=5 step=1 data-size="xs" data-rtl="false" data-show-clear="false" data-show-caption="false">
              </div>
              </form>
            </td>
            <td class = "col-md-1">
              <form method="POST" action="/resource/change">
              <div class="form-group">
                <input type = "hidden" name = "resourceID" value = "<%=allResources[i]['_id']%>">
                <select onchange="this.form.submit()" class="custom-select mb-2 mr-sm-2 mb-sm-0" name = "resourceStatus" id="status-select">
                  <option selected><%=allResources[i].status%></option>

                  <option value="toDo"><%=allResources[i].secondStatus%></option>
                  <option value="inProgress"><%=allResources[i].thirdStatus%></option>
                </select>
              </div>
            </form>
          </td>
            
          </tr>
          <%  } %>
        </tbody>
        </table>
      </div>
    </div>


    </div>
  </body>
